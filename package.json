{
  "name": "events-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "docker compose up --build",
    "dev:down": "docker compose down",
    "dev:reset": "docker compose down -v && docker compose up --build",
    "test": "tsc && node --test",
    "test:e2e": "tsc && node --test --experimental-test-coverage dist/index.e2e.js",
    "test:e2e:db": "docker compose -f docker-compose.test.yml up --build -d",
    "test:e2e:db:down": "docker compose -f docker-compose.test.yml down -v",
    "test:e2e:run": "DATABASE_URL=postgres://events_test:events_test@localhost:5433/events_test JWT_SECRET=test-secret PORT=0 npm run test:e2e",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kruuux/events-backend.git"
  },
  "type": "module",
  "author": "Kruuux",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Kruuux/events-backend/issues"
  },
  "homepage": "https://github.com/Kruuux/events-backend#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.10",
    "@types/pg": "^8.16.0",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "dependencies": {
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.18.0",
    "valibot": "^1.2.0"
  }
}
